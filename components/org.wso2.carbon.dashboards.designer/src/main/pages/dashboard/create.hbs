{{layout "org.wso2.carbon.dashboards.designer.layout"}}
{{fragment "org.wso2.carbon.dashboards.designer.common"}}
{{#fillZone "content"}}
    <div class="container-fluid">
        <div class="row ues-dashboard">

            <div class="col-md-6">
                <form action="/portal/designer/dashboard/test" method="post" id="ues-dashboard-form">

                    <h1 class="page-sub-title">{{t "create.a.dashboard"}}</h1>

                    <div class="form-group">
                        <label for="dashboard-title">
                            {{t "name"}} <span class="required">*</span>
                        </label>
                        <input type="text" name="title" class="form-control" maxlength="250" id="ues-dashboard-title"
                               placeholder="Sales Statistics">
                        <label id="title-error" class="required-error hide" for="title">{{t "equired"}}</label>
                    </div>

                    <div class="form-group">
                        <label for="dashboard-id">
                            {{t "url"}} <span class="required">*</span>
                        </label>
                        <input type="text" name="id" class="form-control" maxlength="100" id="ues-dashboard-id"
                               placeholder="sales-stats">
                        <label id="id-error" class="required-error hide" for="title">{{t "equired"}}</label>
                    </div>

                    <div class="form-group">
                        <label for="dashboard-description">{{t "description"}}</label>
                        <textarea name="description" maxlength="500" class="form-control" id="ues-dashboard-description"
                                  placeholder="Monthly Sales Stats" rows="3"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary btn-bordered"
                            id="ues-dashboard-create">{{t "next"}}</button>

                </form>
            </div>

        </div>
    </div>
{{/fillZone}}