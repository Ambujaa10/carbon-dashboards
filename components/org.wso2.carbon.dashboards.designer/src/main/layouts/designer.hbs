<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-COMPATIBLE" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{placeholder "css"}}
    {{defineZone "header"}}
    {{#placeholder "favicon"}}
        <link rel="shortcut icon" href="{{public "images/default-favicon.png"}}" type="image/png"/>
    {{/placeholder}}
    <title>{{#placeholder "title"}}{{/placeholder}}</title>

</head>
<body>
{{defineZone "task-bar"}}
{{defineZone "left-nav-bar"}}
<div class="page-content-wrapper">
<div class="sidebar-wrapper" id="left-sidebar" data-side="left" data-width="250"
     data-offset-left="52" data-top="inherit" data-offset-bottom="40" 
     data-container=".page-content-wrapper" data-container-divide="true">
    {{defineZone "sidebar-nav-layouts"}}
    {{defineZone "sidebar-nav-widgets"}}
    {{defineZone "sidebar-nav-pages"}}
</div>

<!-- .left-sidebar-sub -->
<div class="sidebar-wrapper sidebar-nav sidebar-nav-sub" id="left-sidebar-sub" data-side="left" data-width="250"
     data-offset-left="302" data-offset-bottom="40" data-container=".page-content-wrapper">
    <div class="nano">
        <div class="nano-content">
            <button class="btn btn-default close-handle" data-handle="close" data-toggle="sidebar"
                    data-target="#left-sidebar-sub" aria-expanded="true" rel="createPage">
                <i class="fw fw-cancel"></i>
            </button>
            <div class="add-padding-3x">
                Select Layout
                <hr />
                <div id="ues-page-layouts">
                    {{defineZone "layout-list"}}
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<div class="sidebar-wrapper" id="right-sidebar" data-side="right" data-width="250"
     data-offset-left="52" data-top="inherit" data-offset-bottom="40" 
     data-container=".page-content-wrapper" data-container-divide="true">
    {{defineZone "sidebar-left-nav-config"}}
</div>
{{defineZone "content"}}

{{defineZone "footer"}}
<footer class="hidden">
    {{placeholder "js"}}
</footer>
</body>
</html>