<?xml version="1.0" encoding="UTF-8" ?>
<Module>
    <ModulePrefs title="Notifications" description="Notifications">
        <Require feature="dynamic-height"/>
        <Require feature="setprefs"/>
    </ModulePrefs>
    <UserPref name="Souq" datatype="bool" default_value="false"/>
    <UserPref name="Facebook" datatype="bool" default_value="false"/>
    <UserPref name="Twitter" datatype="bool" default_value="false"/>
    <UserPref name="GulfNews"  datatype="bool" default_value="false"/>
    <UserPref name="DubaiOne" datatype="bool" default_value="false"/>

<UserPref name="new" datatype="string" default_value="abc"/>

<UserPref name="difficulty" 
     display_name="Difficulty"
     datatype="enum"
     default_value="4">
  <EnumValue value="3" display_value="Easy"/>
  <EnumValue value="4" display_value="Medium"/>
  <EnumValue value="5" display_value="Hard"/>
</UserPref>
    <Content type="html">
        <![CDATA[
<html>
<head>
<script language="javascript" type="text/javascript" src="/portal/js/jquery-1.10.2.js"></script>
<script language="javascript" type="text/javascript" src="/portal/js/bootstrap.min.js"></script>
<script src="js/notifications.js"></script>
<link rel="stylesheet" type="text/css" href="/portal/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="css/notification.css">
<link rel="stylesheet" type="text/css" href="/portal/extensions/themes/pacific-controls-theme/css/gadget.css">

<script src="js/widgets.js"></script>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

</head>
<body onload="showContent()">

<div class="container">

<div id="cont" style="display:none">
  <div style="width:100%" align="left">
    <div id="gulf-news" style="display:none" class="news-section section-left" align="left">
        <div style="float:left; padding-right:5px"><b>Gulf News :</b></div>
        <div id="gulf-list"></div>
    </div>
    <div id="souq" style="display:none" class="news-section section-left" align="left">
        <div style="float:left; padding-right:5px"><b>Souq :</b></div>
        <div id="souq-list"></div>
    </div>
    <div id="twitter" class="news-section section-left" style="display:none" align="left">
        <a class="twitter-timeline" href="https://twitter.com/{screen_name}/lists/{slug}"  data-list-owner-screen-name="{screen_name}" data-widget-id="{widget_id}"  data-list-slug="{slug}" ></a>
    </div>
    <div id="facebook" style="display:none" class="news-section section-left" align="left">
        <div style="float:left; padding-right:5px"><b>Facebook :</b></div>
        <div id="facebook-list"></div>
    </div>
    <div id="dubai-one" style="display:none" class="news-section section-left" align="left">
        <div style="float:left; padding-right:5px"><b>Dubai One :</b></div>
        <div id="dubai-list"></div>
    </div>
  </div>
</div>

</div>
</div>

</body>
</html>
    ]]>
    </Content>
</Module>
